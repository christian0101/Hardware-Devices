<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <top>
        <Label fx:id="welcomeLabel" text="Welcome" BorderPane.alignment="TOP_CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <padding>
                <Insets bottom="10.0" top="20.0"/>
            </padding>
        </Label>


    </top>

    <center>
        <VBox alignment="center" spacing="10" BorderPane.alignment="TOP_CENTER">

            <Label fx:id="dataLabel" text="Current Data will be shown here: " />

            <Button text="Start exercise" />
            <padding>
                <Insets bottom="10.0" top="20.0"/>
            </padding>
        </VBox>
    </center>

    <bottom>
        <VBox>
            <Label>Previous Data</Label>
            <ListView fx:id="listView" prefHeight="148.0" prefWidth="320.0" />

            <padding>
                <Insets left="10.0" right="10.0" bottom="10.0" top="10.0"/>
            </padding>
        </VBox>
    </bottom>


</BorderPane>
